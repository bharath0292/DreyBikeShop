@model IEnumerable<Make>

@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Makes of Vehicle</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"><i class="fa-solid fa-motorcycle"></i> &nbsp; Add New Make</a>
    </div>
    <br />
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td class="text-right">
                        <div class="btn-group" role="group">
                            <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                            <form action="Delete" method="post">
                                <button onclick="if (!confirm('Are you sure want to delete this?')) {return false}" type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fa-solid fa-trash"></i>
                                </button>                            
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>